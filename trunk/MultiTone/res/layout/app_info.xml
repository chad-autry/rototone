<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout android:id="@+id/app_info_root" xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
	<TextView android:id="@+id/thank_you" android:textColor="#ffffff"
		android:textSize="18sp" android:layout_marginLeft="8dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginBottom="12dip"
		android:layout_weight="1" />
	<TextView android:id="@+id/notification_info" android:textColor="#ffffff"
		android:textSize="18sp" android:layout_marginLeft="8dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginBottom="12dip"
		android:layout_weight="1" />
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/ringtone_image" android:gravity="center_vertical"
			android:scaleType="centerInside" 
			android:layout_width="42dip" android:layout_height="42dip" />
		<TextView android:id="@+id/ringtone_text"
			android:textColor="#ffffff" android:textSize="18sp"
			android:layout_marginLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1" />
	</LinearLayout>	
	<LinearLayout android:layout_marginBottom="12dip" android:layout_width="fill_parent" android:layout_height="wrap_content">
		<ImageView android:id="@+id/notificationtone_image" android:gravity="center_vertical"
			android:scaleType="centerInside" 
			android:layout_width="42dip" android:layout_height="42dip" />
		<TextView android:id="@+id/notificationtone_text"
			android:textColor="#ffffff" android:textSize="18sp"
			android:layout_marginLeft="5dip" android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_weight="1" />
	</LinearLayout>	
	<TextView android:id="@+id/contact_info" android:textColor="#ffffff"
		android:textSize="18sp" android:layout_marginLeft="8dip"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginBottom="12dip"
		android:layout_weight="1" />
	<CheckBox android:id="@+id/show_cb" android:text="Don't show again" android:layout_gravity="bottom|left"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>